{
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true,

    "**/node_modules": true,
    "**/.next": true,
    "**/.vscode": true,

    "**/.gitignore": true,
    "**/.gitattributes": true,
    "**/.eslintignore": true,
    "**/.prettierignore": true,
